<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#74b9ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0984e3;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="desk3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6c5ce7;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#a29bfe;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg3)"/>
  
  <!-- Desk -->
  <rect x="50" y="200" width="300" height="80" fill="url(#desk3)" rx="8"/>
  
  <!-- Smartphone -->
  <rect x="180" y="160" width="40" height="70" fill="#2C3E50" rx="6"/>
  <rect x="185" y="165" width="30" height="50" fill="#34495E" rx="3"/>
  <rect x="190" y="170" width="20" height="40" fill="#3498DB" rx="2"/>
  <circle cx="200" cy="225" r="3" fill="#95A5A6"/>
  
  <!-- Student figure -->
  <circle cx="200" cy="100" r="25" fill="#F4A460"/>
  <rect x="180" y="125" width="40" height="60" fill="#32CD32" rx="5"/>
  <rect x="175" y="120" width="50" height="30" fill="#228B22" rx="3"/>
  
  <!-- Headphones -->
  <ellipse cx="170" cy="100" rx="20" ry="15" fill="none" stroke="#2C3E50" stroke-width="3"/>
  <ellipse cx="230" cy="100" rx="20" ry="15" fill="none" stroke="#2C3E50" stroke-width="3"/>
  <rect x="190" y="95" width="20" height="10" fill="#2C3E50" rx="2"/>
  
  <!-- Arms -->
  <ellipse cx="160" cy="140" rx="15" ry="25" fill="#F4A460" transform="rotate(-20 160 140)"/>
  <ellipse cx="240" cy="140" rx="15" ry="25" fill="#F4A460" transform="rotate(20 240 140)"/>
  
  <!-- Books -->
  <rect x="280" y="180" width="20" height="25" fill="#E74C3C"/>
  <rect x="300" y="175" width="20" height="30" fill="#27AE60"/>
  <rect x="320" y="185" width="20" height="20" fill="#F39C12"/>
  
  <!-- Laptop (closed) -->
  <rect x="80" y="190" width="60" height="40" fill="#34495E" rx="3"/>
  <rect x="85" y="195" width="50" height="30" fill="#2C3E50" rx="2"/>
  
  <!-- Study notes -->
  <rect x="250" y="160" width="50" height="8" fill="#F8F8FF" rx="2"/>
  <rect x="255" y="165" width="40" height="5" fill="#FFFFFF" rx="1"/>
  <line x1="260" y1="168" x2="290" y2="168" stroke="#000" stroke-width="0.5"/>
  <line x1="260" y1="170" x2="285" y2="170" stroke="#000" stroke-width="0.5"/>
  
  <!-- Coffee cup -->
  <ellipse cx="120" cy="180" rx="8" ry="12" fill="#8B4513"/>
  <rect x="115" y="175" width="10" height="15" fill="#D2691E" rx="2"/>
  <ellipse cx="120" cy="175" rx="5" ry="2" fill="#F4A460"/>
  
  <!-- Text overlay -->
  <text x="200" y="280" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">Étudiant Connecté</text>
</svg>